<%=form_tag "/contacts/#{@contact.id}", method: :patch do %>
<div> 
 <label for="first_name">First Name:</label> <input type="text" name="first_name" value="<%= @contact.first_name %>" >
 </div>
 <div>
 <label for="last_name">Last Name:</label> <input type="text" name="last_name" value="<%= @contact.last_name %>" >
</div>

<div>
 <label for="email">Email:</label> <input type="text" name="last_name" value="<%= @contact.email %>" >
</div>

<div>
 <label for="phone_number">Phone Number:</label> <input type="text" name="phone_number" value="<%= @contact.phone_number%>" >
</div>

<input type="submit" value= "Edit">
  <% end %>

   <%= button_to "Delete Contact", {:action => "destroy", :id => @contact.id }, :method => :delete, data: {confirm: "Are you sure?"} %>